   "source": [
    "def draw_triangle(height):\n",
    "    n = height\n",
    "    for i in range(n):\n",
    "        if i < n-1 :\n",
    "            print(' '*(n-1-i) + '/' + ' '*2*i + '\\\\' + ' '*(n-1-i))\n",
    "        else :\n",
    "            print(' '*(n-1-i) + '/' + '_'*2*i + '\\\\' + ' '*(n-1-i))"
   ]
  },
